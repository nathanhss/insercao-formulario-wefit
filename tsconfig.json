{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "jest"
    ],

    "experimentalDecorators": true
  },
  "include": ["."],
  "exclude": ["./dist"]
}
